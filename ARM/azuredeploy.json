{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmSize": {
      "type": "string",
      "defaultValue": "Basic_A2",
      "allowedValues": [
        "Basic_A1",
        "Basic_A2",
        "Standard_DS1_V1",
        "Standard_DS2_V2",
        "Standard_DS3_V2"
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "West Europe",
      "allowedValues": [
        "West Europe",
        "North Europe",
        "East US"
      ]
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "configurationUrl": {
      "type": "string"
    },
    "configurationScript": {
      "type": "string",
      "defaultValue": "Default.ps1"
    },
    "configurationFunction": {
      "type": "string",
      "defaultValue": "Default"
    },
    "vmSku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Nano-Server-Technical-Preview",
        "Windows-Server-Technical-Preview"
      ],
      "defaultValue": "2012-R2-Datacenter"
    }
  },
  "variables": {
    "apiVersion": {
      "compute": {
        "virtualMachines": "2015-06-15",
        "extensions": "2015-06-15"
      },
      "network": {
        "networkInterfaces": "2015-06-15",
        "virtualNetworks": "2015-06-15",
        "publicIPAddresses": "2015-06-15"
      },
      "storage": {
        "storageAccounts": "2015-06-15"
      }
    },
    "server": {
      "name": "server"
    },
    "network": {
      "server": {
        "private": "serverpriv",
        "public": "serverpub"
      },
      "subnet": {
        "name": "cdsubnet",
        "prefix": "192.168.0.0/24"
      },
      "virtualNetwork": {
        "name": "cdvnet",
        "prefix": "192.168.0.0/16"
      }
    },
    "storageAccountName": "[uniqueString(resourceGroup().id)]",
    "virtualNetworkName": "cdvnet",
    "virtualNetworkId": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "subnetName": "cdsubnet",
    "subnetReference": "[concat(variables('virtualNetworkId'), '/subnets/', variables('subnetName'))]",
    "storage": {
      "server": {
        "name": "osdisk",
        "vhd": {
          "uri": "[concat('http://', variables('storageAccountName'), '.blob.core.windows.net/', 'vhds', '/')]"
        }
      },
      "account": {
        "name": "[uniqueString(resourceGroup().id)]",
        "type": "Standard_LRS"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "[variables('apiVersion').storage.storageAccounts]",
      "location": "[parameters('location')]",
      "name": "[variables('storage').account.name]",
      "properties": {
        "accountType": "[variables('storage').account.type]"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "[variables('apiVersion').network.virtualNetworks]",
      "location": "[parameters('location')]",
      "name": "[variables('network').virtualNetwork.name]",
      "properties": {
        "subnets": [
          {
            "name": "[variables('network').subnet.name]",
            "properties": {
              "addressPrefix": "[variables('network').subnet.prefix]"
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "[variables('network').virtualNetwork.prefix]"
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "[variables('apiVersion').compute.virtualMachines]",
      "name": "[concat(variables('server').name, copyIndex())]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "vmcopy",
        "count": 5
      },
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('network').server.private, copyIndex())]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('network').server.private, copyIndex()))]"
            }
          ]
        },
        "storageProfile": {
          "osDisk": {
            "name": "[concat(variables('storage').server.name, copyIndex())]",
            "createOption": "FromImage",
            "caching": "readwrite",
            "diskSizeGB": 512,
            "vhd": {
              "uri": "[concat(variables('storage').server.vhd.uri, 'osdisk', copyIndex(), '.vhd')]"
            }
          },
          "imageReference": {
            "offer": "WindowsServer",
            "publisher": "MicrosoftWindowsServer",
            "version": "latest",
            "sku": "[parameters('vmSku')]"
          }
        },
        "osProfile": {
          "computerName": "[concat(variables('server').name, copyIndex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "[variables('apiVersion').network.networkInterfaces]",
      "location": "[parameters('location')]",
      "name": "[variables('network').server.private]",
      "copy": {
        "name": "niccopy",
        "count":  5
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
        "[concat('Microsoft.Network/publicIPAddresses/', variables('network').server.public, copyIndex())]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', concat(variables('network').server.public, copyIndex()))]"
              },
              "subnet": {
                "id": "[variables('subnetReference')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "[variables('apiVersion').network.publicIPAddresses]",
      "location": "[parameters('location')]",
      "name": "[concat(variables('network').server.public, copyIndex())]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      },
      "copy": {
        "name": "publicipcopy",
        "count": 3
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "[variables('apiVersion').compute.extensions]",
      "name": "[concat(variables('server').name, '/Microsoft.PowerShell.DSC')]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "dsccopy",
        "count": 5
      },

      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('server').name, copyIndex())]"
      ],
      "properties": {
        "publisher": "Microsoft.PowerShell",
        "type": "DSC",
        "typeHandlerVersion": "2.14",
        "autoUpgradeMinorVersion": "true",
        "settings": {
          "wmfVersion": "latest",
          "configuration": {
            "url": "[parameters('configurationUrl')]",
            "script": "[parameters('configurationScript')]",
            "function": "[parameters('configurationFunction')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
